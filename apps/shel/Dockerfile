# This file is generated by Nx.
#
# Build the docker image with `npx nx docker-build shel`.
# Tip: Modify "docker-build" options in project.json to change docker build args.
#
# Run the container with `docker run -p 3000:3000 -t shel`.
FROM docker.io/node:lts-alpine

ENV HOST=0.0.0.0
ENV PORT=3000

WORKDIR /app

RUN addgroup --system shel && \
          adduser --system -G shel shel

COPY dist/apps/shel shel/
RUN chown -R shel:shel .

# You can remove this install step if you build with `--bundle` option.
# The bundled output will include external dependencies.
RUN npm --prefix shel --omit=dev -f install

CMD [ "node", "shel" ]
